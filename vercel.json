{
  "version": 2,
  "builds": [
    {
      
      "src": "backend/package.json", 
      "use": "@vercel/node",
      "config": {
        
      }
    },
    {
     
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    
    { "source": "/login", "destination": "/backend/server.js" }, 
    { "source": "/signup", "destination": "/backend/server.js" },
    { "source": "/logout", "destination": "/backend/server.js" }, 
   
    { "source": "/race(/.*)?", "destination": "/backend/server.js" }
   


    
  ]
}
